@model Candidate

<div class="display-6">
    Apply
</div>
<form method="post" asp-action="Apply">
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName">
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName">
    </div>

    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select asp-for="Age"  class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Asp.Net Core Mvc">
            <label>Asp.Net Core Mvc</label>
        </p>

        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Asp.Net Core Api">
            <label>Asp.Net Core Api</label>
        </p>

        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="Blazor">
            <label>Blazor</label>
        </p>
    </fieldset>

    <div>
        <button type="submit" class="btn btn-primary">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>