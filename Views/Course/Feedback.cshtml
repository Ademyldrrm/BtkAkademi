@model Candidate
<div>
    <h3 class="display-4">
         Congratulations @Model.FullName
    </h3>
    <p class="lead">
        Your Aplication has been <mar>accepted.</mar>
    </p>
    <p class="lead">
      Many thanks for your interest.
    </p>
    <hr>
    <blockquote class="blockquote">
        You Have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <p class="text-muted"> Your Applied at @Model.ApplyAt .</p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Aplications</a>
        <a class="btn btn-success" asp-action="Index" asp-controller="Home">Home</a>
    </div>
</div>